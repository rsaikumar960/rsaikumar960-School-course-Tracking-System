@model List<Product>
@{
    ViewData["Title"] = "List of Students";
}


<h2 class="text-center mb-5 text-primary font-weight-bold">List of Students</h2>




<!-- Dashboard Summary -->
<div class="row mb-5">
    <div class="col-md-3">
        <div class="card text-white bg-primary shadow">
            <div class="card-body text-center">
                <h5 class="card-title">Total Students</h5>
                <h3 class="card-text fw-bold">@Model.Count()</h3>
            </div>
        </div>
    </div>
  
  
    <div class="col-md-3">
        <div class="card text-white bg-info shadow">
            <div class="card-body text-center">
                <h5 class="card-title">Distinct Classes</h5>
                <h3 class="card-text fw-bold">@Model.Select(x => x.Class).Distinct().Count()</h3>
            </div>
        </div>
    </div>
</div>




<form method="get" class="mb-4">
    <div class="row g-3 align-items-end bg-light p-4 rounded shadow-sm">
        <div class="col-md-3">
            <label class="form-label fw-bold">Name</label>
            <input type="text" name="name" class="form-control" placeholder="e.g. John" value="@Context.Request.Query["name"]" />
        </div>
        <div class="col-md-2">
            <label class="form-label fw-bold">Class</label>
            <input type="text" name="class" class="form-control" placeholder="e.g. 10" value="@Context.Request.Query["class"]" />
        </div>
        <div class="col-md-2">
            <label class="form-label fw-bold">Course</label>
            <input type="text" name="section" class="form-control" placeholder="e.g. A" value="@Context.Request.Query["section"]" />
        </div>

        <div class="col-md-2">
            <label class="form-label fw-bold">Course</label>
            <input type="text" name="Course" class="form-control" placeholder="e.g. A" value="@Context.Request.Query["section"]" />
        </div>

        <div class="col-md-3 text-end">
            <button type="submit" class="btn btn-primary w-100">🔍 Filter Students</button>
        </div>
    </div>
</form>


<div class="row mb-5">
    <div class="col text-start">
        <a asp-controller="Product" asp-action="Create" class="btn btn-success shadow-sm">➕ Add New Student</a>
    </div>
</div>


<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card student-card shadow border-0 h-100">
                <div class="card-body">
                    <h5 class="card-title text-center text-info fw-bold">@product.Name</h5>
                    <hr />
                    <p class="card-text"><strong>StudentId:</strong> @product.StudentId</p>
                    <p class="card-text"><strong>Name:</strong> @product.Name</p>
                    <p class="card-text"><strong>Class:</strong> @product.Class</p>
                    <p class="card-text"><strong>Course:</strong> @product.Section</p>
                     <p class="card-text"><strong>Marks:</strong> @product.Mars</p>
                   

                    <div class="d-flex justify-content-between mt-3">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-outline-warning">✏️ Edit</a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-outline-danger">🗑️ Delete</a>
                    </div>

                  
                </div>
            </div>
        </div>
    }
</div>

<!-- Additional Styles -->
<style>
    /* Page background */
    body {
        background: linear-gradient(135deg, #e0f7fa, #ffffff);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        padding: 30px;
    }

    /* Title styling */
    h2 {
        font-size: 2.5rem;
        color: #007bff;
        letter-spacing: 1px;
        text-shadow: 1px 1px 2px #ccc;
    }

    /* Student card style */
    .student-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-left: 5px solid #0d6efd;
        background: #ffffff;
        border-radius: 8px;
    }

        .student-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        }

    /* Labels */
    .form-label {
        font-size: 0.9rem;
        color: #333;
    }

    /* Filter box styling */
    form .row {
        background-color: #f0f8ff;
        border: 1px solid #cce;
        border-radius: 10px;
        padding: 20px;
    }

    /* Buttons */
    .btn {
        transition: all 0.3s ease;
        font-weight: 500;
    }

        .btn:hover {
            opacity: 0.9;
        }

    /* Card title */
    .card-title {
        font-size: 1.3rem;
    }

    hr {
        margin: 10px 0;
        border-top: 2px solid #dee2e6;
    }

    .mb-4, .mb-5 {
        margin-bottom: 2.5rem !important;
    }
</style>


